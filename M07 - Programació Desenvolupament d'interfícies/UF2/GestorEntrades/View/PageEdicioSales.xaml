<Page
    x:Class="GestorEntrades.PageEdicioSales"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GestorEntrades"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Padding="10">
            <!--<Button x:Name="btnReturn" Click="btnReturn_Click"/>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Edició de Sales" Grid.Row="0" FontSize="60"/>

            <Grid Grid.Row="1" Padding="20" BorderThickness="1" BorderBrush="White" VerticalAlignment="Top" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Nom:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Padding="10 0 20 0"/>
                <TextBox x:Name="txbNomSala" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top"/>

                <TextBlock Text="Municipi:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Padding="100 0 20 0"/>
                <TextBox x:Name="txbMunicipiSala" Grid.Row="0" Grid.Column="3" VerticalAlignment="Top"/>

                <TextBlock Text="Adreça:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Padding="10 0 20 0"/>
                <TextBox x:Name="txbAdrecaSala" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Top"/>
            </Grid>

            <Grid x:Name="grdZonesSala" Padding="0 0 0 50" Grid.Row="2" Grid.Column="0" RowSpacing="2" ColumnSpacing="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" x:Name="btnPaint" Click="btnPaint_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Paint"/>
                <Button Grid.Row="1" x:Name="btnRemove" Click="btnRemove_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Remove"/>
            </Grid>


            
        </Grid>
        <StackPanel Orientation="Vertical" Margin="20" Grid.Column="1" Padding="20" BorderThickness="1" BorderBrush="White">
            
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Spacing="10">
                <TextBlock Text="Zona:" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="txbZona" VerticalAlignment="Center" Width="150"/>
                <Button x:Name="btnColorSelector" Content="Select Color" Width="150" HorizontalAlignment="Center">
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Width" Value="300" />
                                    <Setter Property="Padding" Value="20" />
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </Flyout.FlyoutPresenterStyle>

                            <StackPanel>
                                <ColorPicker x:Name="clpZona" ColorChanged="clpZona_ColorChanged" IsAlphaEnabled="True" IsColorPreviewVisible="True" IsHexInputVisible="True" IsMoreButtonVisible="False" />

                                <Button Content="Close" HorizontalAlignment="Right" Margin="0,10,0,0" Click="CloseFlyout_Click" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
            <Grid Margin="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <ListView x:Name="lsvZones" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Value.Nom}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Width="30" Height="30" Background="{Binding Key}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="btnAdd" Click="btnAdd_Click" Content="Add" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>
                <Button x:Name="btnDel" Click="btnDel_Click" Content="Delete" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
