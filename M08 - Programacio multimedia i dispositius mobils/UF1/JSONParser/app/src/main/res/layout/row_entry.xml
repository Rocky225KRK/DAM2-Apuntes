<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/llyEntryRow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#1D1D1D">

            <ImageView
                android:id="@+id/imvPhotoEntry"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="90dp"
                android:background="#000000"
                android:src="@drawable/bestiary_threelittlepigs_654x727"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEntry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <TextView
                android:id="@+id/txtEntry"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="Three Little Pigs"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/the_witcher"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guidelineEntry"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>